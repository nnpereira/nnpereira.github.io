---
layout: layouts/base.njk
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag | slug }}/
---

{% block content %}
{% set posts = collections[tag] %}

<div class="wrapper">
  <div class="container">
    <h3>Tagged “{{ tag }}”</h3>
    <ul class="no-bullet">
      {%- for post in collections[tag] -%}
        <li{% if page.url == post.url %} aria-current="page"{% endif %}><a href='{{ post.url }}'>{{ post.data.title }}</a></li>
      {%- endfor -%}
    </ul>

  </div>
</div>

{% endblock %}